{
  "name": "coffegram",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "build-vite": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "cross-env NODE_ENV=development concurrently \"npx vite\" \"npm run electron\"",
    "pack": "electron-packager . my-electron-app --platform=win32 --arch=x64 --out=dist --overwrite",
    "build-electron": "electron-builder build",
    "start": "cross-env NODE_ENV=production electron ."
  },
  "build": {
    "appId": "com.example.coffegram",
    "asar": true,
    "asarUnpack": [
      "**/ffmpeg.dll"
    ],
    "productName": "Coffegram",
    "directories": {
      "buildResources": "assets",
      "output": "desktop"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "preload.js",
      "main.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/bunagram.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.2.6",
    "axios": "^1.7.2",
    "buffer": "^6.0.3",
    "dompurify": "^3.1.6",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "prop-types": "^15.8.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1",
    "react-icons": "^5.2.1",
    "react-lottie": "^1.2.4",
    "react-redux": "^9.1.2",
    "react-router-dom": "^6.24.0",
    "redux-saga": "^1.3.0",
    "socket.io-client": "^4.7.5",
    "tweetnacl": "^1.0.3",
    "tweetnacl-util": "^0.15.1"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/dompurify": "^3.0.5",
    "@types/lodash": "^4.17.7",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@types/react-lottie": "^1.2.10",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "electron": "^33.0.1",
    "electron-builder": "^25.1.8",
    "electron-is-dev": "^3.0.1",
    "electron-packager": "^17.1.2",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.2.2",
    "vite": "^5.3.1"
  }
}
